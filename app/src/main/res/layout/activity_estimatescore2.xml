<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".EstimateScore2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:text="About My Gums"/>

            <TableLayout
                android:id="@+id/tableLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent ="true"
                android:layout_marginTop="23dp"
                android:stretchColumns="*"
                >

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:paddingBottom="10dp"
                    >

                    <TextView
                        android:text="Do your gums bleed when you brush your teeth?/ 평소 칫솔질 할 때 잇몸에서 피가 난 적이 있습니까?"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:paddingLeft="8dp"/>
                    <TextView
                        android:id="@+id/tv_detail1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="\?"
                        android:layout_gravity="center"
                        android:onClick="ShowDetails"/>
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:paddingBottom="10dp"
                    >

                    <RadioGroup
                        android:id="@+id/rg2_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rg2_1_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Yes/예" />

                        <RadioButton
                            android:id="@+id/rg2_1_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="No/아니요" />
                    </RadioGroup>

                </TableRow>
                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:paddingBottom="10dp"
                    >

                    <TextView
                        android:text="Have you had 7 or more adult teeth extracted because of decay, looseness, or pain? (not counting wisdom or impacted teeth, or teeth knocked out by an accident or removed for orthodontics)/충치, 잇몸병 또는 치통 때문에 영구치를 7개 이상 발치한 경험이 있습니까?(사랑니 또는 교정치료를 위한 발치 제외) "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:paddingLeft="8dp"/>
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:paddingBottom="10dp"
                    >

                    <RadioGroup
                        android:id="@+id/rg2_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rg2_2_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Yes/예" />

                        <RadioButton
                            android:id="@+id/rg2_2_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="No/아니요" />
                    </RadioGroup>

                </TableRow>
                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:paddingBottom="10dp"
                    >

                    <TextView
                        android:text="Have you ever had a gum treatment or gum surgery with an anesthetic injection, or have you made a reservation for treatment?/마취주사를 맞고 잇몸치료 또는 잇몸 수술을 받아보신 적이 있거나, 치료를 받기 위해 예약한 적이 있습니까?"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:paddingLeft="8dp"/>
                    <TextView
                        android:id="@+id/tv_detail2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="\?"
                        android:layout_gravity="center"
                        android:onClick="ShowDetails"/>
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:paddingBottom="10dp"
                    >

                    <RadioGroup
                        android:id="@+id/rg2_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rg2_4_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Yes/예" />

                        <RadioButton
                            android:id="@+id/rg2_4_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="No/아니요" />
                    </RadioGroup>

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:paddingBottom="10dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="9"
                        android:paddingLeft="8dp"
                        android:text="Do you frequently snack on sugary or starchy snacks or drink sugared beverages between meals?/하루에 설탕이 든 과자, 설탕커피(믹스커피), 탄산음료를 얼마나 자주 먹습니까? " />

                    <TextView
                        android:id="@+id/tv_detail3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:onClick="ShowDetails"
                        android:text="\?" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:weightSum="2">

                    <RadioGroup
                        android:id="@+id/rg2_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/rg2_5_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="I don't Eat/먹지 않음" />

                        <RadioButton
                            android:id="@+id/rg2_5_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Once/1번 " />

                        <RadioButton
                            android:id="@+id/rg2_5_3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text=" 2-3 times/2~3번" />

                        <RadioButton
                            android:id="@+id/rg2_5_4"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="More than 4 times/4번 이상" />

                        <RadioButton
                            android:id="@+id/rg2_5_5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="I Don't Know/모르겠다." />

                    </RadioGroup>

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:paddingBottom="10dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="9"
                        android:paddingLeft="8dp"
                        android:text="Have you been to a dental clinic for the purpose of treating or managing oral diseases for the past year?/최근 1년간 구강질환 치료나 관리를 목적으로 치과병(의)원에 가신 적이 있습니까?" />

                    <TextView
                        android:id="@+id/tv_detail4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:onClick="ShowDetails"
                        android:text="\?" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:weightSum="2">

                    <RadioGroup
                        android:id="@+id/rg2_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rg2_6_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="have/있다" />

                        <RadioButton
                            android:id="@+id/rg2_6_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="don't have/없다" />

                    </RadioGroup>

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:paddingBottom="10dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="9"
                        android:paddingLeft="8dp"
                        android:text="Do you smoke cigarettes?/지금까지 살아오는 동안 담배를 피운 경험이 있습니까?" />

                    <TextView
                        android:id="@+id/tv_detail5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:onClick="ShowDetails"
                        android:text="\?" />

                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:weightSum="2">

                    <RadioGroup
                        android:id="@+id/rg2_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/rg2_7_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Never Used/전혀 피운 적이 없다" />

                        <RadioButton
                            android:id="@+id/rg2_7_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Yes, I Smoke cigarettes/현재 피우고 있다" />
                        <RadioButton
                            android:id="@+id/rg2_7_3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Formely Used/이전에 피웠으나 끊었다" />

                    </RadioGroup>

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:paddingBottom="10dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="9"
                        android:paddingLeft="8dp"
                        android:text="Are you currently suffering from diabetes or cardiovascular disease (including high blood pressure, hyperlipidemia)?/현재 당뇨병 또는 심혈관계 질환(고혈압, 고지혈증 포함)을 앓고 계십니까?" />

                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:weightSum="2">

                    <RadioGroup
                        android:id="@+id/rg2_8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rg2_8_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="have/있다" />

                        <RadioButton
                            android:id="@+id/rg2_8_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="don't have/없다" />

                    </RadioGroup>

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:paddingBottom="10dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="9"
                        android:paddingLeft="8dp"
                        android:text="During the last week, how often did you brush your teeth just before you went to bed?최근 일주일 동안, 잠자기 직전에 칫솔질을 얼마나 자주 하였습니까?" />

                    <TextView
                        android:id="@+id/tv_detail6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:onClick="ShowDetails"
                        android:text="\?" />

                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:weightSum="2">

                    <RadioGroup
                        android:id="@+id/rg2_9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/rg2_9_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Always (7 Times)/항상 했다(7회)" />

                        <RadioButton
                            android:id="@+id/rg2_9_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Often (4-6 times)/대부분 했다(4∼6회)" />

                        <RadioButton
                            android:id="@+id/rg2_9_3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Occasionally (1-3 times)/가끔 했다(1∼3회)" />

                        <RadioButton
                            android:id="@+id/rg2_9_4"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Never/전혀 하지 않았다(0회)" />
                    </RadioGroup>

                </TableRow>
                <TableRow
                android:layout_width="match_parent"
                android:paddingBottom="10dp"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_weight="9"
                    android:paddingLeft="8dp"
                    android:text="Do you use floss to wipe between teeth?/치아 사이를 닦기 위해 치실을 사용하십니까?" />
                <TextView
                    android:id="@+id/tv_detail7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:onClick="ShowDetails"
                    android:text="\?" />

            </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:weightSum="2">

                    <RadioGroup
                        android:id="@+id/rg2_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rg2_10_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Yes/예" />

                        <RadioButton
                            android:id="@+id/rg2_10_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="No/아니요" />

                    </RadioGroup>

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:paddingBottom="10dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_weight="9"
                        android:paddingLeft="8dp"
                        android:text="Do you currently have periodontal disease?/현재 치주질환을 가지고 있다고 생각하십니까?" />

                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:weightSum="2">

                    <RadioGroup
                        android:id="@+id/rg2_11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rg2_11_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Yes/예" />

                        <RadioButton
                            android:id="@+id/rg2_11_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="No/아니요" />

                    </RadioGroup>

                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:paddingBottom="10dp"
                    >

                   <Button
                       android:id="@+id/bt_estimate2_prev"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_column="0"
                       android:layout_weight="1"
                       android:text="Previous"
                       android:onClick="ButtonOnclick"/>
                    <Button
                        android:id="@+id/bt_estimate2_next"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:text="Next"/>

                </TableRow>

            </TableLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>